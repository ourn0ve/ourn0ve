<Window x:Class="ourn0ve.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ourn0ve"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Display" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" Margin="10" FontSize="24" IsReadOnly="True" TextAlignment="Right"/>
        <UniformGrid Columns="4" Rows="5" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <!-- Цифры и кнопки операций -->
            <Button x:Name="Button7" Content="7" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="Button8" Content="8" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="Button9" Content="9" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="ButtonDivide" Content="/" Width="50" Height="50" Margin="5" Click="OperationButton_Click"/>

            <Button x:Name="Button4" Content="4" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="Button5" Content="5" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="Button6" Content="6" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="ButtonMultiply" Content="*" Width="50" Height="50" Margin="5" Click="OperationButton_Click"/>

            <Button x:Name="Button1" Content="1" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="Button2" Content="2" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="Button3" Content="3" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="ButtonSubtract" Content="-" Width="50" Height="50" Margin="5" Click="OperationButton_Click"/>

            <Button x:Name="Button0" Content="0" Width="50" Height="50" Margin="5" Click="NumberButton_Click"/>
            <Button x:Name="ButtonClear" Content="C" Width="50" Height="50" Margin="5" Click="ClearButton_Click"/>
            <Button x:Name="ButtonEquals" Content="=" Width="50" Height="50" Margin="5" Click="EqualsButton_Click"/>
            <Button x:Name="ButtonAdd" Content="+" Width="50" Height="50" Margin="5" Click="OperationButton_Click"/>
        </UniformGrid>
    </Grid>
</Window>
