<Window x:Class="ourn0ve.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ourn0ve"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Display" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" Margin="10" FontSize="24" IsReadOnly="True"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="AddButton" Content="+" Width="50" Height="50" Margin="5" Click="AddButton_Click"/>
            <Button x:Name="SubtractButton" Content="-" Width="50" Height="50" Margin="5" Click="SubtractButton_Click"/>
            <Button x:Name="MultiplyButton" Content="*" Width="50" Height="50" Margin="5" Click="MultiplyButton_Click"/>
            <Button x:Name="DivideButton" Content="/" Width="50" Height="50" Margin="5" Click="DivideButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
